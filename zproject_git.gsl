if !file.exists (".gitignore")
    echo "Generating initial .gitignore file"
    output ".gitignore"
    ># This is a skeleton created by zproject.
    ># You can add hand-written code here.
    >save.xml
    ># Object files
    >*.o
    >*.so
    >*.ko
    >*.pyc
